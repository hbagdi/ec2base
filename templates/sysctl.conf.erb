<% @sysctl_entries.sort.each do |sysctl| -%>
<% if sysctl[1].has_key? "comment" -%>
# <%= sysctl[1]['comment'] -%>
<% end -%>
<%= sysctl[0] %>=<%= sysctl[1]['value'] %>
